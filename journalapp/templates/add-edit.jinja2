{% extends "base.jinja2" %}

{% block content %}
<link rel="stylesheet" type="text/css" href="static/stylesheet.css">
<div>
<form method='POST' action=''>
    {{form.csrf_token}}
    <div>{{form.title.label}}:
        <p>{{form.title(size = '70')}}</p>
    </div>
    <p class="errors">
        {% if form.title.errors %}
            {{form.title.errors.pop()}}
        {% endif %}
    </p>

    <div>{{form.text.label}}:
        <p>{{form.text(rows = '12', cols = '100')}}</p>
    </div>
    <p class="errors">
        {% if form.text.errors %}
            {{form.text.errors.pop()}}
        {% endif %}
    </p>

    <div><INPUT TYPE="submit" VALUE="submit"></div>
</form>
</div>

{% endblock %}